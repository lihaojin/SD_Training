<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My New Test Page</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="tw_modal" template="Training_Widgets::modal-widget.phtml"/>
            <block class="Magento\Framework\View\Element\Template" name="tw_form" template="Training_Widgets::form-validation.phtml"/>
        </referenceContainer>
    </body>
</page>